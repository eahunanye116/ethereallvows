rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write for the excitement counter
    match /wedding/clicks {
      allow read, write: if true;
    }

    // Allow anyone to submit an RSVP, but not read/update/delete others.
    match /rsvps/{rsvpId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
